<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.sagr.marketing.system.ui.controller.DataEditing"
          alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
    </padding>

    <Label text="Система підтримки прийняття рішень в маркетинговій діяльності" GridPane.columnIndex="0"
           GridPane.rowIndex="0" style="-fx-font: NORMAL 20 Tahoma;" wrapText="true" prefWidth="350" textAlignment="CENTER"/>

    <Button text="Редагувати інформацію про покупців" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER"
            onAction="#editCustomersInformation"/>
    <Button text="Редагувати інформацію про бренд" GridPane.columnIndex="0" GridPane.rowIndex="2"
            GridPane.halignment="CENTER" onAction="#editBrandInformation"/>
    <Button text="Редагувати інформацію про товар" GridPane.columnIndex="0" GridPane.rowIndex="3"
            GridPane.halignment="CENTER" onAction="#editGoodsInformation"/>
    <Button text="Редагувати інформацію про обмеження" GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.halignment="CENTER" onAction="#editLimitationInformation"/>

</GridPane>