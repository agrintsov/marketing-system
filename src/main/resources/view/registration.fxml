<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.sagr.marketing.system.ui.controller.Registration"
          alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
    </padding>

    <Label text="Система підтримки прийняття рішень в маркетинговій діяльності" GridPane.columnIndex="0"
           GridPane.rowIndex="0" style="-fx-font: NORMAL 20 Tahoma;" GridPane.columnSpan="2" GridPane.rowSpan="1"
           wrapText="true" prefWidth="350" textAlignment="CENTER"/>

    <Label text="Особиста інформація" style="-fx-font-style: ITALIC;  -fx-font-weight: bold;" GridPane.columnIndex="0"
           GridPane.rowIndex="1"  GridPane.columnSpan="2" GridPane.rowSpan="1"/>

    <Label text="Ім'я:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="nameField"/>

    <Label text="Прізвище:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="secondNameField"/>

    <Label text="Організація:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="organizationField"/>

    <Label text="Інформація для авторизації" style="-fx-font-style: ITALIC;  -fx-font-weight: bold;" GridPane.columnIndex="0"
           GridPane.rowIndex="5"  GridPane.columnSpan="2" GridPane.rowSpan="1"/>

    <Label text="Логін:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="6" fx:id="loginField"/>

    <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="7" fx:id="passwordField"/>

    <Button text="Назад" GridPane.columnIndex="0" GridPane.rowIndex="8" onAction="#back"/>
    <Button text="Зареєструватися" GridPane.columnIndex="1" GridPane.rowIndex="8" GridPane.halignment="RIGHT"
            onAction="#register"/>
</GridPane>