<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<GridPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.sagr.marketing.system.ui.controller.Login"
          alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
    </padding>

    <Label text="Система підтримки прийняття рішень в маркетинговій діяльності" GridPane.columnIndex="0"
           GridPane.rowIndex="0" style="-fx-font: NORMAL 20 Tahoma;" GridPane.columnSpan="2" GridPane.rowSpan="1"
            wrapText="true" prefWidth="350" textAlignment="CENTER"/>

    <Label text="Логін:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Ввійти" GridPane.columnIndex="0" GridPane.rowIndex="4" onAction="#login"/>

    <Button text="Зареєструватися" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.halignment="RIGHT"
            onAction="#register"/>

    <Text GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" GridPane.halignment="RIGHT"
          fx:id="actionStatus"/>

</GridPane>